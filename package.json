{
  "name": "website-editor",
  "version": "1.0.0",
  "description": "A professional website editor with modern UI, smooth drag-and-drop functionality, and code generation capabilities. Built with React 18, featuring a Figma-like interface with real-time properties editing, layer management, and responsive design.",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "analyze": "npm run build && npx serve -s build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "keywords": [
    "website-editor",
    "react",
    "design-tool",
    "drag-and-drop",
    "canvas",
    "ui-builder",
    "code-generator",
    "figma-clone",
    "web-design",
    "frontend",
    "modern-ui",
    "professional"
  ],
  "author": "Dinesh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dinesh2112/web-editor.git"
  },
  "homepage": "https://web-editor-opal.vercel.app/",
  "bugs": {
    "url": "https://github.com/Dinesh2112/web-editor/issues"
  }
}
